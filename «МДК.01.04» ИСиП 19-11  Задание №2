//3
struct Square

{
	int a;
	int b;
	int c;
	int d;
	int S = pow(a, 2);
	int P = a + b + c + d;
	
};

void printinforamation(Square sqr)
{
	
	cout << "A:" << sqr.a << "\n";
	cout << "B:" << sqr.b << "\n";
	cout << "C:" << sqr.c << "\n";
	cout << "D:" << sqr.d<< "\n";
	cout << "S=" << sqr.S << endl;
	cout << "P=" << sqr.P;
	
}

int main()
{

	Square sqr = { 5,5,5,5 };

	printinforamation(sqr);
	


}





